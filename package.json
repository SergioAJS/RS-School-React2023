{
  "name": "react-ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "buildAll": "npm run build:client-entry && npm run build:server-entry && npm run build:server",
    "build:client-entry": "tsc && vite build",
    "build:server-entry": "tsc && vite build --config vite.server.config.ts --ssr ./src/entry-server.tsx",
    "build:server": "tsc -b",
    "preview": "cross-env NODE_ENV=production node dist/server.js",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "cy:start-open": "start-server-and-test dev http://localhost:8080 cy:open",
    "cy:start-run": "start-server-and-test dev http://localhost:8080 cy:run",
    "cy:open": "cypress open && nyc report --reporter=text --reporter=text-summary",
    "cy:run": "cypress run && nyc report --reporter=text --reporter=text-summary",
    "cy:run-record": "cypress run --record",
    "cy:clean-coverage": "npx rimraf cypress-coverage",
    "lint": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx,json}\"",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.3",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "sirv": "^2.0.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/compression": "^1.7.2",
    "@types/cypress__code-coverage": "^3.10.0",
    "@types/express": "^4.17.16",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.11.12",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.2",
    "cross-env": "^7.0.3",
    "cross-fetch": "^3.1.5",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.2.1",
    "msw": "^1.2.1",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "react-hook-form": "^7.43.9",
    "react-router-dom": "^6.10.0",
    "sass": "^1.61.0",
    "start-server-and-test": "^2.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vite-plugin-istanbul": "^4.0.1",
    "vitest": "^0.29.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": ["eslint --fix", "prettier --write"],
    "src/**/*.{css,scss,md}": "prettier --write",
    "cypress/**/*{js,jsx,ts,tsx,json}": ["eslint --fix", "prettier --write"]
  }
}
